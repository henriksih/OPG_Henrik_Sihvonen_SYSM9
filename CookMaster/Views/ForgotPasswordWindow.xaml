<Window x:Class="CookMaster.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="ForgotPasswordWindow" Height="640" Width="800">
    <StackPanel>
        <TextBlock 
            Text="Användarnamn"
            Height="30"
            Width="160"
            FontSize="20"
            TextAlignment="Center"
            Margin="5"/>
        <TextBox
            Text="{Binding Username}"
            Height="30"
            Width="160"
            FontSize="20"
            TextAlignment="Center"
            Margin="5"/>
        <TextBlock 
            Text="Säkerhetsfråga" 
            Height="30" 
            Width="160" 
            FontSize="20" 
            TextAlignment="Center" 
            Margin="5"/>
        <TextBlock 
            Text="{Binding SecurityQuestion}" 
            Height="40" 
            Width="400" 
            TextWrapping="Wrap"
            FontSize="20" 
            TextAlignment="Center"
            Margin="5"/>

        <TextBlock 
            Text="Svar på säkerhetsfrågan" 
            Height="30" 
            Width="160" 
            FontSize="20" 
            TextAlignment="Center" 
            Margin="5"/>
        <TextBox 
            Text="{Binding SecurityAnswerInput}" 
            Height="30" 
            Width="300" 
            FontSize="20"
            TextAlignment="Center"
            Margin="5"/>
        <TextBlock 
            Text="Nytt lösenord"  
            Height="30"
            Width="160"
            FontSize="20"
            TextAlignment="Center"
            Margin="5"/>
        <TextBox
            Text="{Binding Password}"
            ToolTip="Måste vara minst 8 tecken, innehålla en siffra och ett specialtecken!"
            Height="30"
            Width="160"
            FontSize="20"
            TextAlignment="Center"
            Margin="5"/>
        <TextBlock 
            Text="Bekräfta lösenord"  
            Height="30"
            Width="160"
            FontSize="20"
            TextAlignment="Center"
            Margin="5"/>
        <TextBox
            Text="{Binding ConfirmPassword}"
            Height="30"
            Width="160"
            FontSize="20"
            TextAlignment="Center"
            Margin="5"/>
        <Button 
            Content="Spara nytt lösenord"
            Command="{Binding UpdateCommand}"
            Height="30"
            Width="180"
            FontSize="20"
            Margin="5,30,5,5"/>
        <Button 
            Content="Avbryt"
            Command="{Binding CancelCommand}"
            Height="30"
            Width="180"
            FontSize="20"
            Margin="5,30,5,5"/>
        <TextBlock 
            HorizontalAlignment="Center" 
            Text="{Binding Error}" 
            Foreground="Red"
            FontSize="20"
            Margin="5"/>
    </StackPanel>
</Window>
