<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="25">
            <Label Grid.Row="0" Content="CookMaster" FontSize="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <TextBox Text="Användarnamn"  Height="30" 
                     Width="180" 
                     FontSize="20" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Right" 
                     Margin="5"/>
            <TextBox Text="Lösenord"  Height="30" 
                     Width="180" 
                     FontSize="20" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Right" 
                     Margin="5"/>


        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <TextBox Height="30" 
                     Width="100" 
                     FontSize="20" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Right" 
                     Margin="5"
                     Text="{Binding Username, Mode=TwoWay}"/>
            <PasswordBox x:Name="Pwd" 
                         PasswordChanged="Pwd_PasswordChanged" Height="30" 
                         Width="100" 
                         FontSize="20" 
                         VerticalAlignment="Top" 
                         HorizontalAlignment="Right" 
                         Margin="5" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Button Content="Login" Command="{Binding LoginCommand}" Height="30" Width="100" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5"/>
            <Button Content="Register" Height="30" Width="100" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="{Binding Error}" Foreground="Red" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
