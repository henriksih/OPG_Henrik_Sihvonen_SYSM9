<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="CookMaster" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="25">
            <Label Grid.Row="0" Content="CookMaster" FontSize="100"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock Text="Användarnamn"  
                       Height="30"
                       Width="150"
                       FontSize="20"
                       TextAlignment="Center"
                       Margin="5"/>

            <TextBlock Text="Lösenord"  
                       Height="30"
                       Width="150"
                       FontSize="20"
                       TextAlignment="Center"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <TextBox Height="30" 
                     Width="100" 
                     FontSize="20" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Right" 
                     Margin="5,5,20,5"
                     Text="{Binding Username, Mode=TwoWay}" RenderTransformOrigin="-0.607,0.625"/>
            <PasswordBox x:Name="Pwd" 
                         PasswordChanged="Pwd_PasswordChanged" Height="30" 
                         Width="100" 
                         FontSize="20" 
                         VerticalAlignment="Top" 
                         HorizontalAlignment="Right" 
                         Margin="20,5,5,5" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Button 
                Content="Login" 
                Command="{Binding LoginCommand}"
                IsDefault="True"
                Height="30" Width="100" 
                FontSize="20" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right" 
                Margin="5"/>
            <Button 
                Content="Register" 
                Command="{Binding RegisterCommand}" 
                Height="30" 
                Width="100" 
                FontSize="20" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Center" 
                Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4">
            <TextBlock Text="{Binding Error}" Foreground="Red" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
